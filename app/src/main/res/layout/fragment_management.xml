<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ManagementFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <com.hjq.bar.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:rightIcon="@mipmap/nav_ic_scan"
        app:title="协同企业管理"
        app:titleColor="#ff232323"
        app:titleSize="18sp"
        app:backButton="false"/>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button2_shape"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:src="@mipmap/logo_fccn_pay" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|left"
                    android:text="B2B财务管理转账支付"
                    android:textColor="#ffff8f43"
                    android:textSize="12sp" />

                    <Button
                        android:id="@+id/btn_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="17dp"
                        android:layout_marginRight="14dp"
                        android:layout_marginLeft="26dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button5_shape"
                        android:gravity="center"
                        android:text="立即进入"
                        android:textColor="#000000"
                        android:textSize="14sp" />



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button2_shape"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="运营"
                    android:textColor="#ff232323"
                    android:textSize="17sp" />

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="32dp"
                    app:columnCount="4"
                    app:rowCount="1">

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_relationship"
                        android:gravity="center_horizontal"
                        android:text="关系管理"
                        android:textColor="#ff232323"
                        android:drawablePadding="12dp"
                        android:textSize="14sp"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_employees"
                        android:gravity="center_horizontal"
                        android:text="人事管理"
                        android:drawablePadding="12dp"
                        android:textColor="#ff232323"
                        android:textSize="14sp"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_card"
                        android:gravity="center_horizontal"
                        android:text="企业名片"
                        android:textColor="#ff232323"
                        android:textSize="14sp"
                        android:drawablePadding="12dp"
                        app:layout_column="2"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_permission"
                        android:gravity="center_horizontal"
                        android:text="权限设置"
                        android:textColor="#ff232323"
                        android:textSize="14sp"
                        android:drawablePadding="12dp"
                        app:layout_column="3"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />
                </android.support.v7.widget.GridLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button2_shape"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="办公"
                    android:textColor="#ff232323"
                    android:textSize="17sp" />

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="32dp"
                    app:columnCount="4"
                    app:rowCount="1">

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_approval"
                        android:gravity="center_horizontal"
                        android:text="审批"
                        android:textColor="#ff232323"
                        android:drawablePadding="12dp"
                        android:textSize="14sp"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_task"
                        android:gravity="center_horizontal"
                        android:text="工作任务"
                        android:textColor="#ff232323"
                        android:drawablePadding="12dp"
                        android:textSize="14sp"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_clock"
                        android:gravity="center_horizontal"
                        android:text="打卡"
                        android:textColor="#ff232323"
                        android:drawablePadding="12dp"
                        android:textSize="14sp"
                        app:layout_column="2"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_order_approval"
                        android:gravity="center_horizontal"
                        android:text="企业云"
                        android:textColor="#ff232323"
                        android:drawablePadding="12dp"
                        android:textSize="14sp"
                        app:layout_column="3"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />
                </android.support.v7.widget.GridLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/button2_shape"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="订单"
                    android:textColor="#ff232323"
                    android:textSize="17sp" />

                <android.support.v7.widget.GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="32dp"
                    app:columnCount="4"
                    app:rowCount="2">

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_purchase_order"
                        android:gravity="center_horizontal"
                        android:text="采购订单"
                        android:textColor="#ff232323"
                        android:textSize="14sp"
                        android:drawablePadding="12dp"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_sales_order"
                        android:gravity="center_horizontal"
                        android:text="销售订单"
                        android:textColor="#ff232323"
                        android:textSize="14sp"
                        android:drawablePadding="12dp"
                        app:layout_column="1"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_order_approval1"
                        android:gravity="center_horizontal"
                        android:text="订单审批"
                        android:textColor="#ff232323"
                        android:textSize="14sp"
                        android:drawablePadding="12dp"
                        app:layout_column="2"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@mipmap/management_ic_invoicing_information"
                        android:gravity="center_horizontal"
                        android:text="开票资料"
                        android:textColor="#ff232323"
                        android:textSize="14sp"
                        android:drawablePadding="12dp"
                        app:layout_column="3"
                        app:layout_columnWeight="1"
                        app:layout_row="0"
                        app:layout_rowWeight="1" />

                    <comdemo.example.dell.uitestdemo2.Utils.DrawableTextView
                        android:id="@+id/t13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:drawableTop="@mipmap/management_ic_mirco_shop"
                        android:gravity="center_horizontal"
                        android:text="微店"
                        android:textColor="#ff232323"
                        android:textSize="14sp"
                        android:drawablePadding="12dp"
                        app:layout_column="0"
                        app:layout_columnWeight="1"
                        app:layout_row="1"
                        app:layout_rowWeight="1" />
                </android.support.v7.widget.GridLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""/>
        </LinearLayout>

    </ScrollView>



</LinearLayout>