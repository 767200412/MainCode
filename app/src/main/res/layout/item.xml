<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">

    <TextView
        android:id="@+id/item_goods_name"
        android:layout_width="125dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:gravity="center_vertical|left"

        android:text="关系管理助手"
        android:textColor="#ff232323"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/item_goods_price"
        app:layout_constraintStart_toEndOf="@+id/item_goods_img"
        app:layout_constraintTop_toTopOf="@+id/item_goods_img" />

    <ImageView
        android:id="@+id/item_goods_img"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginBottom="11dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="11dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_notice_up_down" />

    <TextView
        android:id="@+id/item_goods_price"
        android:layout_width="125dp"
        android:layout_height="19dp"
        android:gravity="left"
        android:text="[自定义消息]"
        android:textColor="#ff999999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_goods_img"
        app:layout_constraintEnd_toEndOf="@+id/item_goods_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_goods_name"
        app:layout_constraintTop_toBottomOf="@+id/item_goods_name" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="45dp"
        android:layout_height="47dp"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="331dp"
        android:gravity="center|top"
        android:text="08:50"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_goods_name" />
</android.support.constraint.ConstraintLayout>
